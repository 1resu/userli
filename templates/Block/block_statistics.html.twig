{% extends sonata_block.templates.block_base %}

{% block block %}
    <div class="cms-block cms-block-element">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">{{ settings.title }}</h3>
            </div>
            <div class="box-body">
                <dl>
                    <dt>{{ "admin.registered-accounts"|trans }}</dt>
                    <dd>{{ users_count }}</dd>
                    <dt>{{ "admin.registered-accounts-last-week"|trans }}s</dt>
                    <dd>{{ users_since }}</dd>
{% if is_granted('ROLE_ADMIN') %}
                    <dt>{{ "admin.invite-codes"|trans }}</dt>
                    <dd>{{ vouchers_count }}</dd>
                    <dt>{{ "admin.invite-codes-redeemed"|trans }}</dt>
                    <dd>{{ vouchers_redeemed }} ({{  "Ratio"|trans }}: {{ vouchers_ratio }})</dd>
{% endif %}
                </dl>
            </div>
        </div>
    </div>
{% endblock %}
