{% form_theme password_form 'Form/fields.html.twig' %}

{{ form_start(password_form) }}
<h3>{{ "form.change-password"|trans }}</h3>

{{ form_errors(password_form) }}

<div class="form-group">
    {{ form_label(password_form.password) }}
    {{ form_errors(password_form.password) }}
    {{ form_widget(password_form.password, {'attr': {'class': 'form-control' }}) }}
</div>

<div class="form-group">
    {{ form_label(password_form.plainPassword.first) }}
    {{ form_errors(password_form.plainPassword.first) }}
    {{ form_widget(password_form.plainPassword.first, {'attr': {'class': 'form-control' }}) }}

    {{ form_label(password_form.plainPassword.second) }}
    {{ form_widget(password_form.plainPassword.second, {'attr': {'class': 'form-control' }}) }}
</div>

<div class="form-group">
    {{ form_widget(password_form.submit, {'attr': {'class': 'btn btn-primary' }}) }}
</div>
{{ form_end(password_form) }}

<div class="alert alert-info">
    <p class="lead">{{ "registration.information"|trans }}</p>
    <p>{{ "registration.information-password-policy"|trans|raw }}</p>
</div>
